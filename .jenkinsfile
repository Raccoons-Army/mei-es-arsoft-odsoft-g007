pipeline {
    agent any

    triggers {
        githubPush()
    }

    tools {
        maven 'Maven 3.9.9'
        jdk 'JDK 17'
    }

    environment {
        PROJECT_DIR = "lms/"
    }

    stages {
        stage('Build') {
            steps {
                dir(PROJECT_DIR) {
                    // Clean and package without running tests
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                dir(PROJECT_DIR) {
                    sh 'mvn pmd:pmd'
                    sh 'mvn spotbugs:spotbugs'
                }
            }
        }
       
        stage('Run Unit Tests') {
            steps {
                dir(PROJECT_DIR) {
                    // Run tests while ignoring failures
                    sh "mvn test -Dmaven.test.failure.ignore=true"
                }
            }
        }

         stage('Generate Coverage Report') {
            steps {
                dir(PROJECT_DIR) {
                    sh 'mvn jacoco:report'
                }
            }
        }

        stage('Mutation Testing') {
            steps {
                dir(PROJECT_DIR) {
                    sh 'mvn pitest:mutationCoverage'
                }
            }
        }

        stage('Run Integration Tests') {
            steps {
                dir(PROJECT_DIR) {
                    sh 'mvn failsafe:integration-test'
                }
            }
        }

        stage('Prepare to Deploy') {
            steps {
                script {

                    // clear the deploy directory
                    sh "rm -rf deploy/*"
                    
                    dir(PROJECT_DIR) {
                        // ensure the deployment directory exists
                        sh "mkdir -p ../deploy"

                        // copy the .jar file to the deploy directory (root of the workspace)
                        sh "cp target/*.jar ../deploy"
                    }

                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Set DEPLOY_TARGET based on the branch name
                    def serverConfigName = ''
                    switch (env.GIT_BRANCH) {
                        case 'origin/dev':
                            serverConfigName = 'RAC_DEV'
                            break
                        case 'origin/main':
                            serverConfigName = 'RAC_PROD'
                            break
                        default:
                            serverConfigName = 'RAC_TEST'
                            break
                    }

                    sshPublisher(publishers: [
                        sshPublisherDesc(
                            configName: serverConfigName,
                            transfers: [
                                 // Clear the remote deploy directory
                                sshTransfer(
                                    sourceFiles: "",
                                    remoteDirectory: "",
                                    execCommand: "rm -rf /deploy/* || true"
                                ),
                                // transfer the .jar file to the deploy directory > kill the existing process > start the new process
                                sshTransfer(
                                    sourceFiles: "deploy/*.jar",
                                    remoteDirectory: "",
                                    execCommand: """
                                        # Kill the existing application process
                                        fuser -k 2224/tcp || true
                                        
                                        # load the environment variables
                                        export \$(grep -v '^#' /cfg/myCfg.env | xargs)

                                        # boot the new application
                                        nohup /usr/local/openjdk-17/bin/java -jar \$(find /deploy -name "*.jar" -print -quit) --server.port=2224 --spring.config.location="/cfg/" > /deploy/app.log 2>&1 &
                                    """
                                )
                            ],
                            usePromotionTimestamp: false,
                            useWorkspaceInPromotion: false,
                        )
                    ])
                }
            }
        }
    }
    
    post {
        always {
            archiveArtifacts artifacts: "${PROJECT_DIR}/target/failsafe-reports/*", allowEmptyArchive: true
            archiveArtifacts artifacts: "${PROJECT_DIR}/target/surefire-reports/*", allowEmptyArchive: true
            archiveArtifacts artifacts: "${PROJECT_DIR}/target/pit-reports/**/*", allowEmptyArchive: true
            archiveArtifacts artifacts: "${PROJECT_DIR}/target/site/jacoco/**/*", allowEmptyArchive: true
            archiveArtifacts artifacts: "deploy/**/*", allowEmptyArchive: true
        }
    }
}
